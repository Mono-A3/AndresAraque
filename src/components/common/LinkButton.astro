---
const { href } = Astro.props;
---

<a
  target='_blank'
  href={href}
  role='link'
  class='inline-flex items-center justify-center gap-2 px-3 py-2 text-base transition rounded-xl border focus:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black
  bg-gray-100 text-gray-800 border-gray-300 hover:bg-gray-200 hover:border-gray-400 hover:text-gray-900
  dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-500 dark:hover:text-white'
>
  <slot />
</a>
